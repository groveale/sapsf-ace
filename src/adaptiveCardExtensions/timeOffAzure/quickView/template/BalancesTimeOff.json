{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "default",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Current balances",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder",
                    "spacing": "Medium"
                }
            ],
            "spacing": "Medium"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 8
                        },
                        {
                            "type": "Column",
                            "width": 60,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Type",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 15,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Days",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "size": "Small",
                                    "horizontalAlignment": "Center"
                                }
                            ]
                        }
                    ],
                    "spacing": "Medium"
                },
                {
                    "type": "Container",
                    "$data": "${items}",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": 8,
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "${picture}",
                                            "width": "20px",
                                            "height": "20px"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": 60,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${title}",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${description}",
                                            "wrap": true,
                                            "size": "Small",
                                            "isSubtle": true
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": 15,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${balanceDaysString}",
                                            "wrap": true,
                                            "horizontalAlignment": "Center"
                                        }
                                    ]
                                }
                            ],
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "default",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Upcoming",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder",
                    "spacing": "Medium"
                },
                {
                    "type": "Container",
                    "$data": "${pastTime}",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${startDate}",
                            "wrap": true,
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${quantityInDays} day for Annual Lave",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${approvalStatus}",
                            "wrap": true
                        }
                    ],
                    "separator": true
                }
            ],
            "spacing": "Medium"
        },
        {
            "type": "Container",
            "style": "default",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "History",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder",
                    "spacing": "Medium"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "View my time off history",
                            "wrap": true,
                            "color": "Accent",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "spacing": "Medium",
                    "selectAction": {
                        "type": "Action.Submit",
                        "data": {
                            "id": "viewHistory"
                          }
                    },
                    "separator": true
                }
            ],
            "spacing": "Medium"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Read FAQ",
                    "wrap": true,
                    "color": "Accent",
                    "horizontalAlignment": "Right"
                }
            ],
            "spacing": "Medium",
            "selectAction": {
                "type": "Action.OpenUrl",
                "url": "${faqsLink}"
            },
            "id": "url_faq"
        }
    ]
}